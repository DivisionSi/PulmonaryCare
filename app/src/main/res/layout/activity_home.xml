<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashirayyan.pulmonarycare.Home">

    <Button
        android:id="@+id/btnAddPatient"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp"
        android:background="@color/colorPrimary"
        android:text="Add Patient"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnPatientList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAddPatient"
        android:layout_alignLeft="@+id/btnAddPatient"
        android:layout_alignRight="@+id/btnAddPatient"
        android:layout_alignStart="@+id/btnAddPatient"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:text="View Patient List"
        android:textColor="#ffffff" />
</RelativeLayout>
